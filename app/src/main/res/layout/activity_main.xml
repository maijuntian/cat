<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_body"
                android:layout_width="350px"
                android:layout_height="350px"
                android:background="@drawable/main_menu1_selector" />

            <ImageView
                android:id="@+id/iv_temp"
                android:layout_width="350px"
                android:layout_height="350px"
                android:layout_marginLeft="45px"
                android:background="@drawable/main_menu11_selector" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="47px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_blood_o"
                android:layout_width="350px"
                android:layout_height="350px"
                android:background="@drawable/main_menu2_selector" />


            <ImageView
                android:id="@+id/iv_face_ton"
                android:layout_width="350px"
                android:layout_height="350px"
                android:layout_marginLeft="45px"
                android:background="@drawable/main_menu4_selector" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="47px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="350px"
                android:layout_height="350px"
                android:background="@drawable/main_menu5_selector" />

            <ImageView
                android:id="@+id/iv_bp_hp"
                android:layout_width="350px"
                android:layout_height="350px"
                android:layout_marginLeft="45px"
                android:background="@drawable/main_menu3_selector" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#15b9b9b9">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/examine_logout_selector" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_mgray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="2017年8月2日 周三 17:80"
            android:textSize="16px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124px">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/info_head_bg"
            android:padding="5px" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/main_vip" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_nick_name"
        style="@style/text_mgray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201px"
        android:text="哈哈哈"
        android:textSize="14px" />

    <CheckBox
        android:id="@+id/cb_voice"
        style="@style/text_mgray"
        android:layout_marginLeft="613px"
        android:layout_marginTop="140px"
        android:button="@drawable/nav_trans"
        android:checked="true"
        android:drawableTop="@drawable/voice_selector"
        android:drawablePadding="-18px"
        android:gravity="center_horizontal"
        android:text="语音操作"
        android:textSize="14px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="247px"
        android:src="@mipmap/main_title" />

</RelativeLayout>